type User {
    id: ID!
    first_name: String!
    last_name: String!
    email: String!
    password: String!
    createdAt: String!
}

input UserInput {
    first_name: String!
    last_name: String!
    email: String!
    password: String!
}

type UserMutationResponse {
    success: Boolean!
    message: String!
    user: User
}

type Query {
    userById(id: ID!): User
}

type Mutation {
    createUser(user: UserInput!): UserMutationResponse!
}
